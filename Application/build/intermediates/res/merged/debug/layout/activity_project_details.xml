<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.inverseapps.punchcard.ui.ProjectDetailsActivity">

    <com.inverseapps.punchcard.utils.NonSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="75dp"
        android:background="@color/font_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewGroupProjectTab"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/imgViewProject"
                    android:layout_marginTop="-3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_project_activated" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-12dp"
                    android:textSize="14dp"
                    android:textColor="@color/logo_orange"
                    android:text="Project"
                    android:id="@+id/lblSubProjectTab" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewGroupEmployeesTab"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgViewEmployees"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_tasks" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-5dp"
                    android:textSize="14dp"
                    android:textColor="@color/background_grey"
                    android:text="Employees"
                    android:id="@+id/lblSubEmployeesTab" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewGroupOnSiteTab"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgViewOnSite"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_users" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-5dp"
                    android:textSize="14dp"
                    android:textColor="@color/background_grey"
                    android:text="On Site"
                    android:id="@+id/lblSubOnSiteTab" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewGroupLogNoteTab"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgViewLogNote"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_log" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-5dp"
                    android:textSize="14dp"
                    android:textColor="@color/background_grey"
                    android:text="Log"
                    android:id="@+id/lblSubLogNoteTab" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>

