<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:text="Company Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_up_arrow"
        android:drawableEnd="@drawable/ic_up_arrow"
        android:background="@color/background_grey"
        android:padding="10dp"
        android:id="@+id/btnHeader"
        android:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Employee ID:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmployeeID"
                android:layout_margin="5dp" />

            <TextView
                android:text="Company:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblCompany"
                android:layout_margin="5dp" />

            <TextView
                android:text="Department:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblDepartment"
                android:layout_margin="5dp" />

            <TextView
                android:text="Trade:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblTrade"
                android:layout_margin="5dp" />

            <TextView
                android:text="Job Title:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblJobTitle"
                android:layout_margin="5dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
