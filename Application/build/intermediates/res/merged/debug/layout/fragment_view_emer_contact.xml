<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:text="Emergency Contact Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_up_arrow"
        android:drawableEnd="@drawable/ic_up_arrow"
        android:background="@color/background_grey"
        android:padding="10dp"
        android:id="@+id/btnHeader"
        android:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Emer. Name:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmerName"
                android:layout_margin="5dp" />

            <TextView
                android:text="Emer. Relation:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmerRelation"
                android:layout_margin="5dp" />

            <TextView
                android:text="Emer. Email:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmerEmail"
                android:layout_margin="5dp" />

            <TextView
                android:text="Emer. Mobile Number:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmerMobileNumber"
                android:layout_margin="5dp" />

            <TextView
                android:text="Emer. Home Number:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmerHomeNumber"
                android:layout_margin="5dp" />

            <TextView
                android:text="Emer. Work Number:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmerWorkNumber"
                android:layout_margin="5dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
